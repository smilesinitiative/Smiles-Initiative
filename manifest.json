// manifest.json { "name": "Smiles Initiative", "short_name": "Smiles", "description": "Small Acts, Big Smiles - Volunteer & Donate", "start_url": "/index.html", "display": "standalone", "background_color": "#fff7f0", "theme_color": "#ff6b00", "icons": [ { "src": "smileslogo.jpg", "sizes": "192x192", "type": "image/jpeg" }, { "src": "smileslogo.jpg", "sizes": "512x512", "type": "image/jpeg" } ] }

// sw.js const cacheName = 'smiles-cache-v1'; const filesToCache = [ '/', '/index.html', '/manifest.json', '/smileslogo.jpg', '/style.css' ];

self.addEventListener('install', e => { e.waitUntil( caches.open(cacheName).then(cache => cache.addAll(filesToCache)) ); });

self.addEventListener('fetch', e => { e.respondWith( caches.match(e.request).then(response => response || fetch(e.request)) ); });
